<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="CustomBtn" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:backgroundTint">@color/pink</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomToggleBtn" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/toggle_text_color</item>
        <item name="android:backgroundTint">@color/toggle_background_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomDatePickerDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/pink</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomAlterDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="CustomSidebar" parent="ThemeOverlay.Material3.NavigationView">
        <item name="android:background">@color/white</item>
    </style>


</resources>